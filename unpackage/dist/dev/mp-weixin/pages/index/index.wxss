page {
  color: #1a1a1a;
  font-size: 24rpx;
}
.banner {
  width: 100%;
  height: 268rpx;
  margin: 30rpx auto 44rpx;
}
.banner .swiper {
    height: 268rpx;
}
.banner .item {
    position: relative;
    display: block;
    width: 686rpx;
    height: 268rpx;
    margin: 0 auto;
    border-radius: 14rpx;
    overflow: hidden;
}
.banner .img {
    display: block;
    width: 100%;
    height: 100%;
}
.banner .tag {
    position: absolute;
    bottom: 0;
    right: 0;
    height: 34rpx;
    padding: 0 14rpx;
    line-height: 34rpx;
    color: #fff;
    background-color: #43a5f0;
    z-index: 10;
    border-top-left-radius: 14rpx;
}
.main-bar {
  padding-bottom: 22rpx;
  text-align: center;
  line-height: 70rpx;
  color: #666666;
  border-bottom: 1rpx solid #e6e6e6;
}
.main-bar .img {
    display: block;
    width: 92rpx;
    height: 92rpx;
    margin: 0 auto;
}
.main-bar .flex-item {
    position: relative;
}
.main-bar .flex-item .date {
      position: absolute;
      left: 60rpx;
      top: 40rpx;
      line-height: 1;
      font-size: 24rpx;
      color: #ff392d;
      -webkit-transform: scale(0.8);
              transform: scale(0.8);
}
.song-list {
  padding-left: 32rpx;
}
.song-list .tit-bar {
    font-size: 34rpx;
    font-weight: 600;
    line-height: 110rpx;
}
.song-list .more {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin-top: 30rpx;
    margin-right: 32rpx;
    color: #333;
    font-weight: 400;
    font-size: 24rpx;
    border: 2rpx solid #e6e6e6;
    border-radius: 50rpx;
}
.song-list .switch-line {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    color: #999;
}
.song-list .switch-line .flex-box {
      line-height: 110rpx;
      width: 300rpx;
}
.song-list .switch-line .switch-item {
      font-weight: 600;
}
.song-list .switch-line .switch-item:first-child {
        width: 80rpx;
}
.song-list .switch-line .switch-item:last-child {
        padding-left: 22rpx;
}
.song-list .switch-line .switch-item.on {
        color: #333;
        font-size: 34rpx;
}
.song-list .scroll-view {
    width: 100%;
    white-space: nowrap;
}
.song-list .item {
    position: relative;
    display: inline-block;
    width: 218rpx;
    padding-bottom: 16rpx;
    margin-right: 16rpx;
    line-height: 34rpx;
}
.song-list .item:before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 40rpx;
      z-index: 2;
      background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.2), transparent);
      background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.2), transparent);
}
.song-list .item.video {
      width: 450rpx;
}
.song-list .item .img {
      display: block;
      width: 100%;
      height: 218rpx;
      margin-bottom: 16rpx;
      background: #eee;
      border-radius: 10rpx;
}
.song-list .count {
    position: absolute;
    top: 0;
    right: 0;
    padding-left: 25rpx;
    line-height: 34rpx;
    color: #fff;
    font-size: 24rpx;
    z-index: 10;
    background-size: 25rpx 25rpx;
    -webkit-transform: scale(0.8);
            transform: scale(0.8);
}
.video-list {
  padding-left: 0;
}
.video-list .tit-bar {
    padding-left: 32rpx;
}
.video-list .video-item {
    width: 686rpx;
    height: 490rpx;
    margin: 0 auto;
    background: #F8F8F8;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 24rpx;
}
.video-list .img {
    display: block;
    width: 686rpx;
    height: 390rpx;
    background: #eee;
}
.video-list .desc {
    padding-left: 40rpx;
    font-size: 30rpx;
    font-weight: 600;
    line-height: 100rpx;
}
