page {
  background: #F8F8F8;
}
.page-content {
  position: fixed;
  top: 64px;
  left: 0;
  right: 0;
  bottom: 0px;
}
.top-img {
  width: 50rpx;
  height: 40rpx;
}
.top-img.left {
    margin-left: 10rpx;
}
.top-tab {
  width: 310rpx;
  width: 250rpx;
  margin: 0 auto;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.top-tab .active {
    position: relative;
    color: #f32628;
}
.top-tab .active:after {
      position: absolute;
      content: '';
      left: 50%;
      width: 94rpx;
      height: 4rpx;
      bottom: 0rpx;
      -webkit-transform: translateX(-50%);
              transform: translateX(-50%);
      background: #f32628;
      border-radius: 4rpx;
}
.date-bar {
  width: 686rpx;
  height: 160rpx;
  padding: 20rpx 34rpx;
  margin: 20rpx auto;
  border-radius: 14rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.7);
  line-height: 70rpx;
  font-weight: 600;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.date-bar .date-bar-left {
    font-size: 34rpx;
    font-weight: 600;
}
.date-bar .date-bar-num {
    margin-top: -20rpx;
    font-size: 44rpx;
}
.list-content {
  padding-left: 30rpx;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.video-list {
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.video-item {
  width: 334rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 14rpx;
  overflow: hidden;
  color: #353526;
  background: #fff;
  line-height: 36rpx;
}
.video-item .img {
    display: block;
    width: 100%;
    min-height: 188rpx;
}
.video-item .avactor {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
    border-radius: 28rpx;
    background: #ddd;
}
.video-item .video-con {
    padding: 16rpx 16rpx 30rpx;
}
.video-item .avactor-box {
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.video-item .creater-bar {
    margin-top: 10rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    color: #999;
    font-size: 20rpx;
}
.date-bar-swiper {
  width: 430rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #d0d2d3;
  font-size: 24rpx;
}

