.topbar .h86 {
  height: 86rpx;
}
.scroll-view {
  position: fixed;
  top: 0;
  width: 100%;
  height: 86rpx;
  white-space: nowrap;
  text-align: center;
  line-height: 86rpx;
  color: #333;
  font-weight: 600;
  border-bottom: 1rpx solid #e6e6e6;
  z-index: 10;
  background: #fff;
}
.scroll-view .item {
    position: relative;
    display: inline-block;
    min-width: 126rpx;
    height: 86rpx;
    line-height: 86rpx;
    padding: 0 20rpx;
}
.scroll-view .item.active {
      color: #f32628;
}
.slide {
  position: absolute;
  width: 60rpx;
  height: 4rpx;
  left: 0;
  bottom: 0rpx;
  background: #f32628;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
  z-index: 2;
  bottom: 2rpx;
}
.video-list {
  color: #333;
  background: #F8F8F8;
}
.video-list .tit-bar {
    padding-left: 32rpx;
}
.video-list .video-item {
    padding-top: 32rpx;
    background: #fff;
    border-bottom: 24rpx solid #F8F8F8;
}
.video-list .video-wrap {
    width: 686rpx;
    margin: 0 auto;
}
.video-list .img {
    display: block;
    width: 686rpx;
    height: 390rpx;
    border-radius: 10rpx;
    background: #eee;
}
.video-list .desc {
    font-size: 30rpx;
    font-weight: 600;
    line-height: 84rpx;
    border-bottom: 1rpx solid #e6e6e6;
}
