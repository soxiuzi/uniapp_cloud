.song-list-item {
  padding-left: 32rpx;
  margin-top: 10rpx;
}
.song-list-item .tit-bar {
    font-size: 34rpx;
    font-weight: 600;
    line-height: 110rpx;
}
.song-list-item .more {
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin-top: 30rpx;
    margin-right: 32rpx;
    font-weight: 400;
    font-size: 24rpx;
    border: 2rpx solid #e6e6e6;
    border-radius: 50rpx;
}
.song-list-item .item {
    float: left;
    position: relative;
    width: 216rpx;
    padding-bottom: 16rpx;
    margin-right: 16rpx;
    line-height: 34rpx;
}
.song-list-item .item.video {
      width: 450rpx;
}
.song-list-item .item .img {
      display: block;
      width: 100%;
      height: 216rpx;
      margin-bottom: 16rpx;
      background-color: #eee;
      border-radius: 10rpx;
}
.song-list-item .item .desc {
      height: 64rpx;
      margin-top: 12rpx;
      line-height: 30rpx;
      overflow: hidden;
}
.song-list-item .item .count {
      position: absolute;
      top: 0;
      right: 0;
      padding-left: 25rpx;
      line-height: 34rpx;
      color: #fff;
      font-size: 24rpx;
      z-index: 10;
      background-size: 25rpx 25rpx;
      -webkit-transform: scale(0.8);
              transform: scale(0.8);
}

